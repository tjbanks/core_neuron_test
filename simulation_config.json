{
  "manifest": {
    "$BASE_DIR": "${configdir}",
    "$OUTPUT_DIR": "$BASE_DIR/output"
  },
  "target_simulator": "NEURON",
  "run": {
    "tstart": 0.0,
    "tstop": 5000,
    "dt": 0.1,
    "dL": 20.0,
    "spike_threshold": -15.0,
    "nsteps_block": 5000
  },
  "conditions": {
    "celsius": 34.0,
    "v_init": -70
  },
  "inputs": {
    "current_clamp": {
      "input_type": "current_clamp",
      "module": "IClamp",
      "node_set": "all",
      "gids": [
        0
      ],
      "amp": 0.4,
      "delay": 1000.0,
      "duration": 400.0
    }
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.h5"
  },
  "reports": {
    "v_report": {
      "variable_name": "v",
      "cells": "all",
      "module": "membrane_report",
      "sections": "soma"
    },
    "syn_report3": {
      "cells": {"node_ids":  [0]},
      "variable_name": "W",
      "module": "netcon_report",
      "sections": "all",
      "syn_type": "pyr2pyr",
      "file_name": "PN2PN_W.h5"
    }
  },
  "node_sets_file": "$BASE_DIR/node_sets.json"
}